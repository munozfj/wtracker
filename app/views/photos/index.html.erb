      <% it=0 %>
      <% @photos.each do |photo| %>
        <% if it == 0 %>
          <li data-target="#carousel-example-generic" data-slide-to="<%= it %>" class="active"></li>
        <% else %>
          <li data-target="#carousel-example-generic" data-slide-to="<%= it %>" ></li>
        <% end %>

        <% it+=1 %>

      <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <!-- div class="item active">
