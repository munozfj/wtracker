
<div class="jumbotron">

  <h1 class="new-font">Weight History</h1>

  <%= link_to image_tag('add.png', alt:'add', size:'50x50') , new_weight_path %>
  <br />

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover table-condensed">
      <thead>
        <tr>
          <th>Date</th>
          <th>Weight</th>
          <th>Fat %</th>
          <th>Fat Weight</th>
          <th>BMI</th>
          <th>BMI Category</th>
          <th>Benedict-Formula</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @weights.each do |w| %>
          <tr>
            <td><%= link_to w.date, weight_path(w) %></td>
            <td><%= w.weight %></td>
            <td><%= w.fat_porcentage %></td>
            <td><%= fat_weight (w) %></td>
            <td><%= bmi (w) %></td>
            <th>Normal</th>
            <td><%= benedict (w) %></td>
            <td><%= link_to image_tag('edit.png', alt:'edit', size:'22x22')  , edit_weight_path(w) %> </td>
            <td><%= link_to image_tag('delete.png', alt:'delete', size:'22x22'), w, method: :delete, data: { confirm: 'Are you sure you want to delete this record?' } %></td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div> 

  <br>
  <%= link_to image_tag('back.png', alt:'back', size:'50x50'), panel_path %>
        
</div>


