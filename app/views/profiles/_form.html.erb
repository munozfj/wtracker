<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <%= f.label :nickname %>
    <%= f.text_field :nickname %>
  </div>
  <div class="field">
    <%= f.label :gender %>
    <%= f.collection_radio_buttons :gender, AppParameter.where(group: 'Gender'), :code, :value  %>
  </div>
  <div class="field">
    <%= f.label :date_birth %><br>
    <%= f.date_select :date_birth, start_year: 1900 %>
  </div>
  <div class="field">
    <%= f.label :height %><br>
    <%= f.number_field :height , size: 6, step: 0.01, class: "numero" %>
  </div>
  <div class="field">
    <%= f.label :activity_level %><br>

    <%= collection_select(:profile, :activity_level, AppParameter.where(group: 'Activity Level'), :value, :code, {:prompt => "Select an activity level"} ) %>

  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary'%>
  </div>
<% end %>
