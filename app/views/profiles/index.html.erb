<% page_title "Profile" %>

<div class="jumbotron">

<h1>Your Profile</h1>

<%= link_to "<button type='button' class='btn btn-default active'>
  <span class='glyphicon glyphicon-plus-sign'></span> </button>".html_safe , new_profile_path %>

   <div class="table-responsive">
<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Photo</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Nickname</th>
      <th>Gender</th>
      <th>Date birth</th>
      <th>Height</th>
      <th>Activity Level</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= image_tag current_user.profile.avatar.url(:thumb), class: "img-circle" %></td>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.nickname %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.date_birth %></td>
        <td><%= profile.height %></td>
        <td><%= profile.activity_level %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div> 

<br>

<!-- %= link_to 'New Profile', new_profile_path % -->

</div>
